<div class="chatroom-home">
    <%= render 'shared/top_header', title: current_user.username %>
    <%= render 'shared/flash_messages' %>
    <div class="ui two column grid">
        <div class="twelve wide column">
            <div class="ui fluid raise card chat-box">
                <div class="ui small feed chat-space">
                    
                    <%= render @messages %>
                </div>
                <div class="extra content text-area">
                    <form class="ui reply form">

                        <div class="field">
                            <div class="ui action input field input-space">
                                <input type="text" placeholder="Type your Message...">
                                <button class="ui button">
                                    Send
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="four wide column">
            <div class="ui inverted vertical menu">
                <a class="active item">
                    Home
                </a>
                <a class="item">
                    Messages
                </a>
                <a class="item">
                    Friends
                </a>
            </div>
        </div>
    </div>
</div>