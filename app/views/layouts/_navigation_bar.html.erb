<div class="ui inverted large menu">

    <div class="ui container" >
        <% if logged_in? %>
            <%= link_to  "Chatroom", root_path, class: "item" %>
        <% end %>
        <a class="item">
            Messages
        </a>
        <div class="ui inverted right menu">
            <% if logged_in? %>
                <div class="ui dropdown link item">
                    Profile <i class="dropdown icon"></i>
                    <div class="menu">
                        <% if logged_in? %>
                            <%= link_to  "Logout",  
                                logout_path, 
                                class: "item", 
                                method: :delete, 
                                data: {confirm: "Are you sure you want to logout?"} 
                            %>
                                
                        <% else %>
                            <%= link_to  "Login", login_path, class: "item" %>
                        <% end %>
                
                    </div>
                </div>
            <% end %>
            <% if !logged_in? %>
                <div class="item">
                    <div class="ui primary button">Sign Up</div>
                </div>
            <% end %>
        </div>
    </div>

</div>